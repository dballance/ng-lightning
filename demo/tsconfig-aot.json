{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "stripInternal": true,
    "outDir": "../temp/demo",
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true
  },
  "files": [
    "./main.ts",
    "./intro/intro.module.ts",
    "./components/index.ts",
    "./support/support.module.ts"
  ],
  "angularCompilerOptions": {
    "genDir": ".",
    "strictMetadataEmit": true
  }
}
